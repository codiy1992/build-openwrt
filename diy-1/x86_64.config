# ------------------------------------------------
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_Generic=y
CONFIG_PACKAGE_grub2-efi=y
CONFIG_EFI_IMAGES=y
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_TARGET_KERNEL_PARTSIZE=32
CONFIG_TARGET_ROOTFS_PARTSIZE=512
CONFIG_KERNEL_BUILD_USER="Codiy"
CONFIG_GRUB_TITLE="OpenWrt built by Codiy"
# CONFIG_GRUB_CONSOLE is not set

# ------------------------------------------------
# https://github.com/openwrt/openwrt/tree/master/package
# https://github.com/coolsnowwolf/lede/tree/master/package
# ------------------------------------------------
# package/kernel/linux
CONFIG_PACKAGE_kmod-kvm-amd=y
CONFIG_PACKAGE_kmod-kvm-intel=y
CONFIG_PACKAGE_kmod-kvm-x86=y
CONFIG_PACKAGE_kmod-vmxnet3=y
# -- "SD Card", "USB" Support
# CONFIG_PACKAGE_kmod-sdhci=y
# CONFIG_PACKAGE_kmod-usb-ohci=y
# CONFIG_PACKAGE_kmod-usb-ohci-pci=y
# CONFIG_PACKAGE_kmod-usb-storage-uas=y
# CONFIG_PACKAGE_kmod-usb-uhci=y
# CONFIG_PACKAGE_kmod-usb-ehci=y
# CONFIG_PACKAGE_kmod-usb2=y
# CONFIG_PACKAGE_kmod-usb2-pci=y
# CONFIG_PACKAGE_kmod-usb3=y
# package/utils/util-linux
CONFIG_PACKAGE_fdisk=y
CONFIG_PACKAGE_cfdisk=y
# package/network/services
CONFIG_PACKAGE_dnsmasq=n
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_uhttpd=y
# package/libs/openssl
CONFIG_OPENSSL_ENGINE_CRYPTO=y
CONFIG_OPENSSL_ENGINE_DIGEST=y
CONFIG_OPENSSL_WITH_CAMELLIA=y
CONFIG_OPENSSL_WITH_COMPRESSION=y
CONFIG_OPENSSL_WITH_DTLS=y
CONFIG_OPENSSL_WITH_EC2M=y
CONFIG_OPENSSL_WITH_ERROR_MESSAGES=y
CONFIG_OPENSSL_WITH_GOST=y
CONFIG_OPENSSL_WITH_IDEA=y
CONFIG_OPENSSL_WITH_MDC2=y
CONFIG_OPENSSL_WITH_RFC3779=y
CONFIG_OPENSSL_WITH_SEED=y
CONFIG_OPENSSL_WITH_WHIRLPOOL=y

# ------------------------------------------------
# https://github.com/openwrt/packages
# https://github.com/coolsnowwolf/packages
# ------------------------------------------------
# packages/devel
CONFIG_PACKAGE_make=y
# packages/net
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_kcptun=y
CONFIG_PACKAGE_open-iscsi=y
CONFIG_PACKAGE_openssh-sftp-server=y
# packages/utils
CONFIG_PACKAGE_vim=y
CONFIG_PACKAGE_docker=y
CONFIG_PACKAGE_dockerd=y
CONFIG_PACKAGE_docker-compose=y

# ------------------------------------------------
# https://github.com/openwrt/luci
# https://github.com/coolsnowwolf/luci
# ------------------------------------------------
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-app-adblock=y
CONFIG_PACKAGE_luci-i18n-adblock-zh-cn=y
CONFIG_PACKAGE_luci-app-wol=y
CONFIG_PACKAGE_luci-i18n-wol-zh-cn=y

# ------------------------------------------------
# Lean's Lede only or other sourced LuCI Apps
# ------------------------------------------------
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-app-webadmin=y
CONFIG_PACKAGE_luci-i18n-webadmin-zh-cn=y
CONFIG_PACKAGE_luci-app-openclash=y
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_luci-i18n-turboacc-zh-cn=y

