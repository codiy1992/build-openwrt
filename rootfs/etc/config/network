config globals 'globals'

config interface 'loopback'
    option ifname 'lo'
    option proto 'static'
    option ipaddr '127.0.0.1'
    option netmask '255.0.0.0'

config interface 'lan'
    option type 'bridge'
    option ifname 'eth0'
    option proto 'static'
    option ip6assign '64'
    option ipaddr '10.0.0.2'
    option gateway '10.0.0.1'
    option netmask '255.255.255.0'
